<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-20">

      <div class = "title-companies"><h3><strong>Registered Companies</strong></h3></div>

      <div class="cards-container-company">
          <% @companies.each do |company| %>
          <div class="card-company">
            <%= link_to company_path(company) do %>
              <div class="overlay">
                <h4><%= company.name %></h4>
              </div>
              <%= cl_image_tag company.logo.key, crop: :fill%>
            <% end %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
