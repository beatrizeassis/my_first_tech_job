<div class="container">
  <div class="row justify-content-center">
    <div class="col-20">
      <h4><br>Company's form</h4><br>
      <div class="formcard">
      <%= simple_form_for @company do |f| %>
        <%= f.input :name %>
        <%= f.input :headquarters %>
        <%= f.input :industry %>
        <%= f.input :description %>
        <%= f.input :contact_info %>
        <%= f.submit "Submit", class: "btn btn-secondary success"%>
      <% end %>
      </div>
    </div>
  </div>
</div>
