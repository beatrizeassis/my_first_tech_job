<div class="container">
  <div class="row justify-content-center">
    <div class="col-15">
      <div class="formcard">
      <h2>Edit <b><%= @company.name%></b>'s details </h2><br>
      <%= simple_form_for @company do |f| %>
         <%= f.input :name %>
        <%= f.input :headquarters %>
        <%= f.input :industry %>
        <%= f.input :description %>
        <%= f.input :contact_info %>
        <%= f.submit "Edit ticket", class: "btn btn-secondary success"%>
      <% end %>
    </div>
  </div>
</div>
</div>
