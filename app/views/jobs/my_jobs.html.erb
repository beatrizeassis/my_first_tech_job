<div class="container">
  <div class="row justify-content-center">
    <div class="col-20 mt-4 mb-5">
      <h1><strong>My Jobs</strong></h1>

      <div class="cards-container mt-3">
        <% @jobs.each do |job| %>
          <div class="card-product-infos">
            <ul>
              <li>Name: <%= job.company.name %></li>
              <li>Title: <%= job.title %></li>
              <li>Location: <%= job.location %></li>
              <li>Salary: <%= job.salary %></li>
              <%= link_to "Delete listing", job_path(job), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this listing?"} %>
              <%= link_to "Edit listing", edit_job_path(job), data: {turbo_method: :get} %>
              <%= link_to "See applications", job_matches_path(job), data: {turbo_method: :get} %>

            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
