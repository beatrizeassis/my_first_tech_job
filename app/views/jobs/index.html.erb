<div class="container">
  <div class="row justify-content-center">
    <div class="col-20 mt-5 mb-5">
      <h1><strong>Jobs Available</strong></h1>

      <div class="cards-container mt-5">
        <% @jobs.each do |job| %>
          <div class="card-product-infos">
            <ul>
              <li><%= job.company.name %></li>
              <li><%= job.title %></li>
              <li><%= job.location %></li>
              <li><%= job.salary %></li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
