<div class="container">
 <h2><strong>Jobs Available</strong></h2>
  <div class="container justify-content-center">
    <div class="row justify-content-center">
      <div class="col">
        <%= form_with url:"/jobs", method: :get, class: "search" do %>
        <i class="fa-solid fa-magnifying-glass"></i>
          <%= text_field_tag :query,
            params[:query],
            class: "search-input",
            placeholder: "Search by position, company or location"%>
        <% end %>
      </div>
    </div>
  </div>

      <div class="cards-container mt-5">
        <% unless @jobs.blank? %>
          <% @jobs.each do |job| %>
            <%= link_to job_path(job) do %>
              <div class="card-product-infos">
                <%= image_tag "company_logo" %>
            <p>
            <%= job.title %> <br>at <strong><%= job.company.name %></strong>
            <br><%= job.location %>
            <br>$<%= job.salary %>
            <br><%= job.job_description %>
            </p>
           <% end %>
        </div>
      <% end %>
    <% else %>
      <p class=message>Sorry! No jobs available for your search</p>
    <% end %>
  </div>
</div>
